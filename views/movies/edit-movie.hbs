<h2>Edit movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
  <label> Title:
    <input type="text" name="title" value="{{movie.title}}" />
  </label>


  <label> Genre:
    <input name="genre" value={{movie.genre}}></input>
  </label>

  <label> Plot:
    <input type="text" name="plot" value="{{movie.plot}}" />
  </label>
  <label> Cast:
    <select name="cast" value="{{movie.cast._id}}">
      {{#each celebrity}}
        <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
    </select>
  </label>
    <button type="submit">Save changes</button>
</form>
